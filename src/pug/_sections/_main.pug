            span#user_show
          p.text_margin Your mail :
            span#mail_show
        div.profile_user_form
          div._form_name
            form#change_login
              p
                input(onchange='profile_close_error_message_login()', name='', required='required', type='text', placeholder='Username', pattern="[a-z]{1,15}").js_change_login
              span.js_change_value_user_found.change_value_style A user already exists 
              p
