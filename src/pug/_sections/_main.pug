              p
                input(type='submit', name='Login', value='Change your mail').button_border
            div.change_value_sections.js_change_value_mail
              p Changes have been made successfully
          div._form_pass
            form#change_pass
              p
                input(onchange='profile_close_error_message_pass_old_not_found()', name='', required='required', type='password', placeholder='Old password').js_change_pass_old
